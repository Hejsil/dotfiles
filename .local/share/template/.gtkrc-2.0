style "default"
{
  engine "hcengine" {
    edge_thickness = 2
  }

  xthickness = 2
  ythickness = 2

  EelEditableLabel::cursor_aspect_ratio = 0.1
  EelEditableLabel::cursor_color    = "#{{base0D-hex}}"

  GtkEntry::cursor_color    = "#{{base0D-hex}}"
  GtkEntry::cursor_aspect_ratio = 0.1

  GtkHSV::focus-line-pattern = "\0"

  GtkRange::stepper-size = 20

  GtkTextView::cursor_aspect_ratio = 0.1
  GtkTextView::cursor_color    = "#{{base0D-hex}}"

  GtkTreeView::expander-size = 16

  GtkWidget::focus-line-pattern = "\4\2"
  GtkWidget::focus-line-width = 2
  GtkWidget::focus-padding = 0
  GtkWidget::interior_focus = 1
  GtkWidget::link-color = "#{{base0D-hex}}"
  GtkWidget::visited-link-color = "#{{base0E-hex}}"

  # Nautilus
  NautilusIconContainer::frame_text = 1

  # Pidgin
  GtkIMHtml::hyperlink-color = "#{{base0D-hex}}"
  GtkIMHtml::hyperlink-visited-color = "#{{base0E-hex}}"
  GtkIMHtml::hyperlink-prelight-color = "#{{base07-hex}}"

  # Evolution
  GtkHTML::link_color = "#{{base0D-hex}}"
  GtkHTML::vlink_color = "#{{base0E-hex}}"
  GtkHTML::cite_color = "#{{base07-hex}}"

  fg[NORMAL]      = "#{{base04-hex}}"
  text[NORMAL]    = "#{{base04-hex}}"
  bg[NORMAL]      = "#{{base00-hex}}"
  base[NORMAL]    = "#{{base00-hex}}"

  fg[INSENSITIVE]      = "#{{base04-hex}}"
  bg[INSENSITIVE]      = "#{{base01-hex}}"
  text[INSENSITIVE]    = "#{{base04-hex}}"
  base[INSENSITIVE]    = "#{{base01-hex}}"

  fg[PRELIGHT]    = "#{{base00-hex}}"
  text[PRELIGHT]  = "#{{base00-hex}}"
  bg[PRELIGHT]    = "#{{base04-hex}}"
  base[PRELIGHT]  = "#{{base04-hex}}"

  fg[ACTIVE]      = "#{{base05-hex}}"
  text[ACTIVE]    = "#{{base05-hex}}"
  bg[ACTIVE]      = "#{{base02-hex}}"
  base[ACTIVE]    = "#{{base02-hex}}"

  fg[SELECTED]    = "#{{base00-hex}}"
  text[SELECTED]  = "#{{base00-hex}}"
  bg[SELECTED]    = "#{{base04-hex}}"
  base[SELECTED]  = "#{{base07-hex}}"
}

class "GtkWidget" style "default"