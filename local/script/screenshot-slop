#!/bin/execlineb -S1
cd $1
backtick -E file { date "+%y-%m-%dT%H-%M-%S-%N.png" }
backtick -E selection { slop -f "%g" }
foreground { import -window root -crop $selection $file }
foreground { oxipng -o max --strip safe $file }
foreground { notify-send Screenshot $file }
xclip -selection clipboard -t image/png -i $file
