#!/bin/execlineb -S1
cd $1
backtick -E temp { mktemp "/tmp/screenshot.XXXXXXXX.png" }
backtick -E file { date "+%y-%m-%dT%H-%M-%S-%N.jxl" }
backtick -E selection { slop -f "%g" }
foreground { import -window root -crop $selection $temp }
foreground { clipcopy -t image/png -i $temp }
foreground { notify-send Screenshot $file }
cjxl $temp $file

