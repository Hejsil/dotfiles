#!/bin/sh
exec sed \
    -e 's#\\#\\\\#g' \
    -e 's#\[#\\[#g' \
    -e 's#\*#\\*#g' \
    -e 's#\+#\\+#g' \
    -e 's#\?#\\?#g' \
    -e 's#|#\\|#g' \
    -e 's#{#\\{#g' \
    -e 's#}#\\}#g' \
    -e 's#(#\\(#g' \
    -e 's#)#\\)#g' \
    -e 's#\]#\\]#g' \
    -e 's#\[#\[#g' \
    -e 's#\^#\\^#g' \
    -e 's#\$#\\$#g' \
    -e 's#\.#\\.#g'
