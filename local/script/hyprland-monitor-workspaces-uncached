#!/bin/execlineb -P
pipeline { monitors name }
pipeline { xargs "-d\n" yes } # Generates infite pairs of monitors, seperated by spaces
pipeline { head -n10 }        # Pick 10
pipeline { tr " " "\n" }      # Flatten
pipeline { sort }             # With it sorted, we now have 10 x monitor1, 10 x monitor2 ...
nl -n ln                      # We use nl to give each line a unique id
