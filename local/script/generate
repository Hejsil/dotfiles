#!/bin/sh

. ~/.config/env
template_dir="$HOME/.config/template"

dunstrc="$XDG_CONFIG_HOME/dunst/dunstrc"
foot="$XDG_CONFIG_HOME/foot/foot.ini"
waybar="$XDG_CONFIG_HOME/waybar/style.css"

mkdir -p "$(dirname "$dunstrc")"
mkdir -p "$(dirname "$foot")"
mkdir -p "$(dirname "$waybar")"
base16 "$template_dir/foot.ini" >"$foot"
base16 "$template_dir/dunstrc" >"$dunstrc"
base16 "$template_dir/waybar.css" >"$waybar"
