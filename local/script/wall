#!/bin/execlineb -S1

define images "/tmp/wallpapers-on-screen"
foreground {
    backtick -E count {
        pipeline { xrandr }
        grep -c "\\bconnected\\b"
    }
    pipeline { fd . $1 --type f }
    pipeline { sort -R }
    redirfd -w 1 $images head -n $count
}

foreground {
    pipeline { cat $images }
    xargs -d "\n" feh --bg-fill
}


