#
# Programs
#

super + @space
    rofi -show run

super + Return
    $TERMINAL

super + shift + Return
    $TERMINAL -e nnn -id

#
# bspwm
#

super + q
    bspc node -c

super + {Left,Down,Up,Right}
    bspc node -f {west,south,north,east}

super + shift + {Left,Down,Up,Right}
    bspc node -s {west,south,north,east}

super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + {_,shift + } {1-9,0}
    bspc {desktop -f,node -d} "focused:^{1-9,10}"

#
# Sound
#

XF86Audio{Raise}Volume
    mute.sh 0 && volume.sh +5%

XF86AudioLowerVolume
    mute.sh 0 && volume.sh -5%

XF86AudioMute
    mute.sh $(((pactl list sinks | grep -q Mute:.no > /dev/null) && echo 1) || echo 0)

#
# Misc
#

Print
    screenshot.sh "$HOME/MEGA/Pictures/Screenshots"
