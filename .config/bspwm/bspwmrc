#!/bin/sh

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         3
bspc config window_gap           5

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

setxkbmap -layout "dk"

runonce.sh compton &
runonce.sh megasync &
runonce.sh wall.sh &
runonce.sh sxhkd -r /tmp/sxhkd.log &

# reload sxhkd config when it changes
echo "$HOME/.config/sxhkd/sxhkdrc" | runonce.sh entr -p pkill -USR1 -x sxhkd &

# restart wm when its config changes
echo "$HOME/.config/bspwm/bspwmrc" | runonce.sh entr -p bspc wm -r &
