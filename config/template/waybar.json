{
    "spacing": 10,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "memory",
        "cpu",
        "disk"
    ],
    "modules-right": [
        "custom/weather",
        "custom/rss",
        "clock"
    ],
    "hyprland/workspaces": {
        "format": "{icon}{id}</span>",
        "format-icons": {
            "active": "<span weight='heavy'>‚Üí",
            "empty": "<span> ",
            "default": "<span>*"
        },
        "persistent-workspaces": {
            "*": 10
        }
    },
    "memory": {
        "format": "mem{:3}%"
    },
    "cpu": {
        "format": "cpu{usage:3}% {{waybar-cpus}}",
        "format-icons": [
            "<span color='#{{base0B-hex}}'> </span>",
            "<span color='#{{base0B-hex}}'>‚ñÅ</span>",
            "<span color='#{{base0B-hex}}'>‚ñÇ</span>",
            "<span color='#{{base0A-hex}}'>‚ñÉ</span>",
            "<span color='#{{base0A-hex}}'>‚ñÑ</span>",
            "<span color='#{{base09-hex}}'>‚ñÖ</span>",
            "<span color='#{{base09-hex}}'>‚ñÜ</span>",
            "<span color='#{{base08-hex}}'>‚ñá</span>",
            "<span color='#{{base08-hex}}'>‚ñà</span>"
        ],
        "interval": 1
    },
    "disk": {
        "format": "disk{percentage_used:3}%"
    },
    "custom/weather": {
        "format": "{}¬∞",
        "tooltip": true,
        "interval": 3600,
        "exec": "wttrbar",
        "return-type": "json"
    },
    "custom/rss": {
        "exec": "find ~/.local/share/rss/unread/ -type f -printf . | wc -c",
        "format": "üì∞{:>3}",
        "interval": 10
    },
    "clock": {
        "format": "Week {:%V %b %d %a %H:%M}"
    }
}
