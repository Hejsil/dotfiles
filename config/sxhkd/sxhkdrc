#
# Programs
#

# rofi starts slow, and dmenu is slow on large inputs... *sign* I can do better.
# Use st as a window for launch-program!
super + @space
    $WINDOW -e launch-program

super + g
    $WINDOW -e launch-steam-game.sh

super + r
    $WINDOW -e rss-read.sh

super + e
    $WINDOW -e fzf-uni

super + k
    $WINDOW -e fzf-kill

super + s
    $WINDOW -e shutdown

super + {_,shift +,alt +,ctrl +} a
    $WINDOW -e aniz-ui {list '^[^\t]*\tc',list '^[^\t]*\t(p|w)',list '',database}

super + b
    $WINDOW -e book

super + shift + r
    rss-open-all-in-browser.sh

super + m
    $TERMINAL -e aerc

super + Return
    $TERMINAL

super + o
    open "$(xsel -b)"

super + p
    for i in 1 2 ; do pactl list sinks short ; done | \
        rg -F "$(pactl get-default-sink)" -A 1 --max-count 1 | tail -n1 | \
        cut -f2 | xargs -d'\n' pactl set-default-sink

ctrl + @space
    xdotool click 1

#
# bspwm
#

super + q
    bspc node -c

super + {Left,Down,Up,Right}
    bspc node -f {west,south,north,east} && \
        xdotool getactivewindow mousemove --window '%1' --polar 0 0

super + shift + {Left,Down,Up,Right}
    bspc node -s {west,south,north,east}

super + ctrl + alt + {Left,Down,Up,Right}
    bspc node -m {west,south,north,east}

super + {t,shift + t,shift + f,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + {s}
    bspc node -g {sticky}

super + {_,shift + } {1-9,0}
    bspc {desktop -f,node -d} "focused:^{1-9,10}"

super + ctrl + {Left,Down,Up,Right}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + {Left,Down,Up,Right}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + ctrl + alt + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

ctrl + alt + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

#
# Sound
#

XF86Audio{Raise,Lower}Volume
    pactl list sinks short | \
        cut -f1 | \
        xargs -d '\n' -IS pactl set-sink-volume S {+,-}2%

#
# Misc
#

Print
    screenshot "$HOME/Sync/images/screenshots"

shift + Print
    screenshot-slop "$HOME/Sync/images/screenshots"

Pause
    $TERMINAL -c fullscreen -f $(xgetres big.font) -e bash -c 'sleep 0.1s; menu main'

