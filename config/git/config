[core]
    editor = kak

[pull]
    # https://blog.gitbutler.com/how-git-core-devs-configure-git/
    rebase = true

[credential]
    helper = store

[diff]
    # https://blog.gitbutler.com/how-git-core-devs-configure-git/
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[fetch]
    writeCommitGraph = true

    # https://blog.gitbutler.com/how-git-core-devs-configure-git/
    all = true
    pruneTags = true
    prune = true

[rerere]
    # https://blog.gitbutler.com/how-git-core-devs-configure-git/
    enabled = true
    autoupdate = true

[rebase]
    # https://blog.gitbutler.com/how-git-core-devs-configure-git/
    autoSquash = true
    autoStash = true
    updateRefs = true

[merge]
    # https://blog.gitbutler.com/how-git-core-devs-configure-git/
    conflictstyle = zdiff3

[push]
    # https://blog.gitbutler.com/how-git-core-devs-configure-git/
    autoSetupRemote = true

[includeIf "gitdir:~/repo/forks/"]
    path = ~/repo/forks/.gitconfig
[includeIf "gitdir:~/repo/own/"]
    path = ~/repo/own/.gitconfig
[includeIf "gitdir:~/repo/work/"]
    path = ~/repo/work/.gitconfig
